<h1>Editing Book</h1>
<% if @book.errors.any? %>
 <div id= error>
  <div class= errortext><%= @book.errors.count %>error prohibited this book from being saved:</div>
 <ul>
   <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
   <% end %>
 </ul>
 </div>
<% end %>


 <%= form_with model: @book do |f| %>
  <div class= "field">
  <label>
   <strong>Title</strong>
  </label>
   <%= f.text_field :title %>
 </div>
  
  <div class= "field">
  <label>
    <strong>Body</strong>
  </label>
    <%= f.text_field :body %>
  </div>
  
<div class= "action">
 <br> <%= f.submit 'Update Book' %>
</div> 

<br><%= link_to "show", "/books/#{@book.id}" %>
|
<%= link_to "back", "/books" %>

<% end %>